@using FoxClub.Models;
@model Fox;


<h2>@Model.Name</h2>
<ul>
    <li>
        <a href="/home/?name=@Model.Name">information</a>
    </li>
    <li>
        <a href="/nutritionstore/?name=@Model.Name">nutrition store</a>
    </li>
    <li>
        <a href="/trickcenter/?name=@Model.Name">trick center</a>
    </li>
</ul>
<form action="/nutritionstore" method="post">
    <input type="text" value="@Model.Name" name="name" hidden />

    <label for="food">Food</label>
    <select id="food" name="food">
        @foreach (var item in ViewBag.foodTypes)
        {
            <option value="@item">@item</option>
        }

    </select>

    <label for="drink">Drink</label>
    <select id="drink" name="drink">
        @foreach (var item in ViewBag.drinkTypes)
        {
            <option value="@item">@item</option>
        }
    </select>

    <button>Change</button>
</form>

